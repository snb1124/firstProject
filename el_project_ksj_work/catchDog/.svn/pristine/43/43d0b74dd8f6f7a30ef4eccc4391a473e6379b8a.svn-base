	<td class="tt"><%= rvo.getRbwriter() %> </td> <!-- 작성자 -->
	<td class="tt"><%= rvo.getRbcontent() %> </td>
	<td class="tt"><%= rvo.getRbupdatedate() %> </td>
	<td class="tt"><img src="/image/reviewimg/<%= rvo.getRbimage() %>"> </td>

</tr>
<%
}//end of for
%>
