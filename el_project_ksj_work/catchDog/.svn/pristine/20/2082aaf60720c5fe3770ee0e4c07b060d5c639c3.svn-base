/* recommend */

.intable {
	margin-left: auto !important;
	margin-right: auto !important;
	width: 50% !important;
	}
	label input[type="radio"]:checked + .label{
		background-color:#F7AA58;
		outline:none;
		color:white;
		font-weight:bold;
	}
	
	label input[type=radio]{
		display: none;		
	}
	
	label .label{
	background-color: #e8e8e8;
	margin:4px;
	height:30px;
	width: 30%;
	line-height:33px;
	border-radius:4px;
	transition:background-color 0.3s ease-in-out;
	font-size:12px;
	cursor: pointer;
	text-align: center;
	display: inline-block;
}

